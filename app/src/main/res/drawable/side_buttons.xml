<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#B3B3B3"/> <!-- Grey color -->
            <size android:width="100dp" android:height="100dp"/>
        </shape>
    </item>

    <!-- Inner Circle -->
    <item android:top="6dp" android:right="6dp" android:bottom="6dp" android:left="6dp">
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- White color -->
        </shape>
    </item>
</layer-list>
